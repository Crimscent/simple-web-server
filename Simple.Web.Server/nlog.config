<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="C:\nlog\platform-web-server\internal-nlog.txt">

  <targets>
    <target xsi:type="File" name="all" fileName="C:\nlog\platform-web-server\all-${shortdate}.log"
            layout="${date:universalTime=true:format=O}|${event-properties:item=EventId.Id}|${logger}|${uppercase:${level}}|${message} ${exception}" />

    <target xsi:type="File" name="warn" fileName="C:\nlog\platform-web-server\warn-${shortdate}.log"
            layout="${date:universalTime=true:format=O}|${event-properties:item=EventId.Id}|${logger}|${uppercase:${level}}|${message} ${exception}" />

    <target xsi:type="File" name="error" fileName="C:\nlog\platform-web-server\error-${shortdate}.log"
            layout="${date:universalTime=true:format=O}|${event-properties:item=EventId.Id}|${logger}|${uppercase:${level}}|${message} ${exception}" />
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="all" />
    <logger name="*" minlevel="Warn" maxlevel="Warn" writeTo="warn" />
    <logger name="*" minlevel="Error" writeTo="error" />
  </rules>
</nlog>